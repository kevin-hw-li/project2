<div class="ui main text container">


  <div class="ui middle aligned center aligned grid">
    <div class="column">
      <h2 class="ui header">
        <div class="content">Sign into your account
        </div>
      </h2>
      
      <div id="camera"></div>

        <%= form_tag signin_path, method: :post, class: "ui large form" do %>
          <div class="field">
            <input id="username" type="text" name="name" placeholder="Username" />
          </div>
          <div class="field">
            <input type="button" id="verify" value="Sign In" class="ui large button" />
          </div>
        <% end %>
    </div>
  </div>


  <script type="text/javascript">
    signin()
  </script>
</div>
