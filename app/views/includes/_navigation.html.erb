<div class="ui inverted segment green">
  <div class="ui inverted pointing menu green">
    <%= link_to "Home", root_path, class: "ui item" %>
    <% if @current_user %>
      <%= link_to "Gallery", images_path, class: "ui item" %>
    <% end %>
    <div class="right menu">
      <% if @current_user %>
        <div class="ui item welcome">
          Welcome back, <%= @current_user.name %>!
        </div>
      <% end %>
      <% if !@current_user %>
        <%= link_to "Sign up", new_user_path, class: "ui item" %>
        <%= link_to "Sign in", signin_path, class: "ui item" %>
      <% end %>

      <% if @current_user %>
        <%= link_to "Sign out", signout_path, method: :delete, class: "ui item" %>
      <% end %>
    </div>
  </div>
</div>
